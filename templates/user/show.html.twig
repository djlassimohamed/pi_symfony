{% extends 'base_back.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.tel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('users') }}" class="btn btn-success">Retour à la liste</a>

    {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
