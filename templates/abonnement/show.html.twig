{% extends 'base_back.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
    <h1>Abonnement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonnement.id }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ abonnement.duree }}</td>
            </tr>
            <tr>
                <th>Date début</th>
                <td>{{ abonnement.dateDebut ? abonnement.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('abonnement_index') }}" class="btn btn-success">Retour à la liste</a>

    <a href="{{ path('abonnement_edit', {'id': abonnement.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('abonnement/_delete_form.html.twig') }}
{% endblock %}
