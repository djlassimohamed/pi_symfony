{% extends 'base_back.html.twig' %}

{% block title %}Liste abonnement{% endblock %}

{% block body %}
    <h1>Liste des abonnements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Durée</th>
                <th>Date début</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for abonnement in abonnements %}
            <tr>
                <td>{{ abonnement.duree }}</td>
                <td>{{ abonnement.dateDebut ? abonnement.dateDebut|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('abonnement_show', {'id': abonnement.id}) }}"class="btn btn-success">Afficher</a>
                </td>
                <td>
                    <a href="{{ path('abonnement_edit', {'id': abonnement.id}) }}"class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
