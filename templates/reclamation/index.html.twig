{% extends 'base_front.html.twig' %}
{% block body %}
    <h1>Liste des réclamations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Status</th>
                <th>Description</th>
                <th>Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.type }}</td>
                <td>{{ reclamation.status }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('reclamation_show', {'id': reclamation.id})  }}"class="btn btn-success">afficher</a>
                </td>
                <td>
                    <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}"class="btn btn-primary">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune réclamation trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
