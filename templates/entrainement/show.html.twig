{% extends 'base_front.html.twig' %}
{% block body %}
    <h1>Entrainement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entrainement.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entrainement.titre }}</td>
            </tr>
            <tr>
                <th>Jour</th>
                <td>{{ entrainement.jour }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ entrainement.heure ? entrainement.heure|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Periode</th>
                <td>{{ entrainement.periode }}</td>
            </tr>
            <tr>
                <th>Intensite</th>
                <td>{{ entrainement.intensite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('entrainement_index') }}"class="btn btn-success">Retour a la liste</a>

    <a href="{{ path('entrainement_edit', {'id': entrainement.id}) }}"class="btn btn-primary">modifier</a>

    {{ include('entrainement/_delete_form.html.twig') }}
{% endblock %}
